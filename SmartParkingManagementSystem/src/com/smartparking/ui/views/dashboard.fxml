<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.smartparking.ui.DashboardController">

    <top>
       <ToolBar>
    <Label text="Smart Parking Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Pane HBox.hgrow="ALWAYS"/>

    <Label fx:id="lblTotal" text="Total: 0" style="-fx-font-size: 14px;" />
    <Label fx:id="lblEmpty" text="Empty: 0" style="-fx-font-size: 14px;" />
    <Label fx:id="lblOccupied" text="Occupied: 0" style="-fx-font-size: 14px;" />

    <Button text="New Entry" onAction="#onNewEntry"/>
     <Button text="Refresh" onAction="#onRefresh"/>
     <Button text="Vehicle Exit" onAction="#onVehicleExit"/>


</ToolBar>

    </top>

    <center>
        <TableView fx:id="slotTable" prefHeight="400" prefWidth="780">
            <columns>
                <TableColumn fx:id="colSlotCode" text="Slot Code" prefWidth="200"/>
                <TableColumn fx:id="colFloor" text="Floor" prefWidth="100"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="200"/>
                <TableColumn fx:id="colTicketId" text="Ticket ID" prefWidth="100"/>

            </columns>
        </TableView>
    </center>
</BorderPane>
