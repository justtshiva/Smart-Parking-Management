<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.smartparking.ui.ExitFormController"
      spacing="12">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Vehicle Exit"
           style="-fx-font-size:16px; -fx-font-weight:bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Ticket ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfTicketId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="lblStatus" text=""/>
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Exit Vehicle" onAction="#onExit"/>
    </HBox>
</VBox>
